<h1>Crea tu Usuario</h1>
{{#if userData}}
  <span>Sesión iniciada de {{userData.user}}!</span>
{{/if}}

<div class="signup">
  <form method="post" action="/api/sessions/signup" enctype="multipart/form-data">
    <input type="text" placeholder="Nombre" name="first_name" />
    <br />
    <br />
    <input type="text" placeholder="Apellido" name="last_name" />
    <br />
    <br />
    <input type="text" placeholder="Edad" name="age" />
    <br />
    <br />
    <input type="text" placeholder="Email" name="email" />
    <br />
    <br />
    <input type="password" placeholder="Contraseña" name="password" />
    <br />
    <br />
    <label for="avatar">Avatar:</label>
    <input type="file" name="avatar" id="avatar" accept=".jpg, .jpeg, .png" />
    <br />
    <br />
    <button class="btn-signup" type="submit">Registrate</button>
  </form>
  <form method="get" action="/api/sessions/github">
    <button class="btn-signup" type="submit">registrarse con github</button>
  </form>
</div>