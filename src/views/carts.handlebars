    <h1>Carrito de Compras</h1>
    {{#if userData}}
      <h2>Usuario: {{userData.user}}</h2>
      <h2>Rol: {{userData.role}}</h2>
      <h2>ID del Carrito: {{userData.cart}}</h2>
    {{/if}}
    <hr>
    {{#if currentCart}}
      <div>
        <h2>Productos en el carrito:</h2>
        <div class="cart-list">
          {{#each currentCart.products}}
            <div class="product-cart">
              <h3>{{this.idProduct.title}}</h3>
              <p>Descripci√≥n: {{this.idProduct.description}}</p>
              <p>C√≥digo: {{this.idProduct.code}}</p>
              <p>Precio: üí≤{{this.idProduct.price}}</p>
              <p>Stock disponible: {{this.idProduct.stock}}</p>
              <p>Cantidad: 
                <input type="number" id="quantity-{{this.idProduct._id}}" value="{{this.quantity}}" min="1" max="100">
              </p>
              <div>
                <button type="button" onclick="updateCartItemQuantity('{{../currentCart._id}}', '{{this.idProduct._id}}', document.getElementById('quantity-{{this.idProduct._id}}').value)">Confirmar cantidad ‚úÖ</button>
                <button type="button" onclick="removeProduct('{{../currentCart._id}}', '{{this.idProduct._id}}')">ELIMINAR ‚ùå</button>
              </div>
            </div>
            <div id="success-message"></div>
            <div id="error-message"></div>
          {{/each}}
        </div>
            {{#if currentCart.products}}
            <div class="btns-container">
              <form class="btn-purchase" method="post" action="/api/carts/{{currentCart._id}}/purchase">
                <button class="btn-purchase" type="submit">COMPRAR</button>
              </form>
              <div class="btn-empty">
                <button type="button" onclick="emptyCart('{{currentCart._id}}')">VACIAR CARRITO</button>
              </div>
            </div>
            {{/if}}
      </div>
    {{else}}
      <p>No tienes productos en tu carrito.</p>
    {{/if}}
    <a href="/products">Volver a productos</a>
